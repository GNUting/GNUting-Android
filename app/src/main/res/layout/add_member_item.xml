<?xml version="1.0" encoding="utf-8"?>
<com.changs.android.gnuting_android.util.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingHorizontal="19dp"
    android:paddingVertical="14dp"
    android:layout_marginBottom="15dp"
    android:id="@+id/add_member_item_checkable_layout"
    android:background="@drawable/selector_radio_member_item">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/post_current_member_item_img"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_profile" />

        <TextView
            android:id="@+id/post_current_member_txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="전재일"
            android:textSize="16sp"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/add_member_item_info"
        android:maxLines="1"
        tools:text="20학번 | 23살 | ENFJ"
        android:textSize="16sp"
        android:ellipsize="end"
        android:textColor="#767676"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/add_member_item_intro"
        android:maxLines="1"
        android:textSize="16sp"
        tools:text="안녕하세요 저는 컴퓨터과학과이고 컴퓨터과학을 공부하고 있습니다."
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</com.changs.android.gnuting_android.util.CheckableLinearLayout>