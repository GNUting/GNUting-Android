<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="25dp">

    <TextView
        android:id="@+id/chat_item_txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxWidth="150dp"
        android:fontFamily="@font/pretendard_bold"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/chat_item_txt_info"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/chat_item_img_profile"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="이지은, 카리나, 김민정" />


    <TextView
        android:id="@+id/chat_item_txt_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:ellipsize="end"
        android:fontFamily="@font/pretendard_medium"
        android:maxLines="1"
        android:textColor="#767676"
        android:visibility="gone"

        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/chat_item_txt_name"
        app:layout_constraintEnd_toStartOf="@+id/chat_item_txt_type"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/chat_item_txt_name"
        app:layout_constraintTop_toTopOf="@+id/chat_item_txt_name"
        tools:text="23학번 | 컴퓨터과학과" />

    <TextView
        android:id="@+id/chat_item_txt_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:ellipsize="end"
        android:fontFamily="@font/pretendard_regular"
        android:maxLines="1"
        android:textColor="#666666"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/chat_item_img_profile"
        app:layout_constraintEnd_toStartOf="@+id/chat_item_txt_time"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/chat_item_txt_name"
        app:layout_constraintTop_toBottomOf="@+id/chat_item_txt_name"
        app:layout_constraintVertical_bias="1.0"
        tools:text="내일 시간 있으세요?" />

    <TextView
        android:id="@+id/chat_item_txt_type"
        android:layout_width="0dp"
        android:maxWidth="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:background="@drawable/background_radius_4dp_solid_purple"
        android:ellipsize="end"
        android:fontFamily="@font/pretendard_regular"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="#696969"
        app:layout_constraintBottom_toBottomOf="@+id/chat_item_txt_info"
        app:layout_constraintEnd_toStartOf="@+id/chat_item_view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/chat_item_txt_info"
        app:layout_constraintTop_toTopOf="@+id/chat_item_txt_info"
        tools:text="3:3" />

    <View
        android:id="@+id/chat_item_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/chat_item_txt_type"
        app:layout_constraintEnd_toStartOf="@+id/chat_item_txt_time"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/chat_item_txt_type"
        app:layout_constraintTop_toTopOf="@id/chat_item_txt_type" />


    <TextView
        android:id="@+id/chat_item_txt_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/pretendard_regular"
        android:gravity="end"
        android:maxLines="1"
        android:textColor="#C0C0C0"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/chat_item_txt_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/chat_item_view"
        app:layout_constraintTop_toTopOf="@+id/chat_item_txt_type"
        tools:text="16:30" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_item_img_profile"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:contentDescription="사용자 프로필 이미지"
        android:scaleType="centerCrop"
        app:civ_border_color="#DCDCDC"
        app:civ_border_width="1dp"
        app:layout_constraintEnd_toStartOf="@+id/chat_item_txt_name"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_profile"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/chat_item_img_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:contentDescription="채팅방에 읽지 않은 새로운 메세지를 표시하는 아이콘"
        android:src="@drawable/ic_new"
        app:layout_constraintStart_toStartOf="@+id/chat_item_img_profile"
        app:layout_constraintTop_toTopOf="@id/chat_item_img_profile" />


</androidx.constraintlayout.widget.ConstraintLayout>


