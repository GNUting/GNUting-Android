<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingHorizontal="12dp"
    android:layout_marginBottom="15dp"
    android:paddingVertical="10dp"
    android:gravity="center_vertical"
    android:background="@drawable/background_radius_10dp_stroke_gray10">

    <TextView
        android:id="@+id/application_list_txt_department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        tools:text="산업시스템공학부"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/application_list_txt_member_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:maxLines="1"
        tools:text="3명"
        android:layout_marginStart="3dp"
        app:layout_constraintStart_toEndOf="@id/application_list_txt_department"
        app:layout_constraintTop_toTopOf="@+id/application_list_txt_department"
        app:layout_constraintBottom_toBottomOf="@+id/application_list_txt_department"
        android:layout_marginEnd="30dp"
        android:textColor="@color/black" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/application_list_ll_status_container"
        android:layout_width="140dp"
        android:background="@drawable/background_radius_10dp_solid_main"
        android:paddingVertical="13dp"
        android:paddingHorizontal="30dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/application_list_txt_status"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대기중"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>