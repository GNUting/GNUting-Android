<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    xmlns:tools="http://schemas.android.com/tools">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/other_chat_item_img"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:contentDescription="사용자 프로필 이미지"
        tools:src="@drawable/ic_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/other_chat_item_txt_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:textColor="#6B6B6B"
        android:fontFamily="@font/pretendard_medium"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/other_chat_item_img"
        app:layout_constraintStart_toEndOf="@+id/other_chat_item_img"
        app:layout_constraintTop_toTopOf="@+id/other_chat_item_img"
        tools:text="닉네임" />

    <TextView
        android:id="@+id/other_chat_item_txt_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:maxWidth="250dp"
        android:fontFamily="@font/pretendard_regular"
        android:paddingHorizontal="10dp"
        android:layout_marginTop="2dp"
        android:textColor="@color/black"
        android:background="@drawable/background_other_chat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/other_chat_item_txt_nickname"
        app:layout_constraintTop_toBottomOf="@+id/other_chat_item_txt_nickname"
        tools:text="안녕하세요" />

    <TextView
        android:id="@+id/other_chat_item_txt_time"
        android:layout_width="wrap_content"
        android:textColor="#979C9E"
        android:textSize="12sp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/pretendard_regular"
        android:layout_marginStart="6dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/other_chat_item_txt_message"
        tools:text="16:43" />

</androidx.constraintlayout.widget.ConstraintLayout>