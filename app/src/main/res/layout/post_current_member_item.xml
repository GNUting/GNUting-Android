<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:background="@drawable/background_radius_10dp_solid_gray8_stroke_gray9"
    android:layout_marginBottom="15dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/post_current_member_item_img"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/post_current_member_txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="전재일"
        android:textSize="16sp"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@+id/post_current_member_item_img"
        app:layout_constraintTop_toTopOf="@+id/post_current_member_item_img"
        app:layout_constraintBottom_toBottomOf="@+id/post_current_member_item_img"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/post_current_member_txt_member_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#767676"
        android:layout_marginTop="5dp"
        tools:text="20학번 | 23살 | ENFJ"
        app:layout_constraintTop_toBottomOf="@+id/post_current_member_item_img"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/post_current_member_txt_member_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        tools:text="안녕하세요"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@+id/post_current_member_txt_member_info"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>