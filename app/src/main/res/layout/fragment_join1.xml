<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context=".ui.fragment.user.Join1Fragment">    <TextView        android:id="@+id/textView3"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginHorizontal="25dp"        android:layout_marginTop="30dp"        android:text="지누팅 서비스 이용을 위해서"        android:textColor="@color/black"        android:textSize="22sp"        android:textStyle="bold"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="@+id/join1_img_back"        app:layout_constraintTop_toBottomOf="@+id/join1_img_back" />    <LinearLayout        android:id="@+id/join1_ll_content"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:layout_marginHorizontal="25dp"        android:orientation="horizontal"        app:layout_constraintEnd_toEndOf="@+id/textView3"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@+id/textView3">        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="회원님의 "            android:textColor="@color/black"            android:textSize="22sp"            android:textStyle="bold" />        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="정보"            android:textColor="@color/main"            android:textSize="22sp"            android:textStyle="bold" />        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="가 필요해요 :)"            android:textColor="@color/black"            android:textSize="22sp"            android:textStyle="bold" />    </LinearLayout>    <androidx.appcompat.widget.AppCompatImageView        android:id="@+id/join1_img_back"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginStart="13dp"        android:layout_marginTop="7dp"        android:padding="12dp"        android:src="@drawable/arrow_left"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent" />    <LinearLayout        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:orientation="horizontal"        app:layout_constraintBottom_toBottomOf="@+id/join1_img_back"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="@+id/join1_img_back">        <ImageView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:src="@drawable/progress_stage1_active" />        <ImageView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginHorizontal="20dp"            android:src="@drawable/progress_stage2" />        <ImageView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:src="@drawable/progress_stage3" />    </LinearLayout>    <androidx.appcompat.widget.LinearLayoutCompat        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_marginHorizontal="25dp"        android:orientation="vertical"        android:layout_marginTop="50dp"        app:layout_constraintBottom_toTopOf="@+id/join1_btn_next"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintHorizontal_bias="0.0"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@+id/join1_ll_content">        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="학교 이메일"            android:layout_marginStart="4dp"            android:textColor="@color/black"            android:textSize="14sp" />        <androidx.constraintlayout.widget.ConstraintLayout            android:layout_width="match_parent"            android:layout_height="wrap_content">            <androidx.appcompat.widget.AppCompatEditText                android:id="@+id/join1_edit_email"                android:layout_width="0dp"                android:layout_height="wrap_content"                android:hint="학교 이메일 입력"                android:inputType="textEmailAddress"                android:maxLength="20"                android:maxLines="1"                android:textColor="@color/black"                android:textColorHint="@color/gray7"                android:textSize="14sp"                android:theme="@style/EditTextTheme"                app:layout_constraintBottom_toBottomOf="parent"                app:layout_constraintEnd_toStartOf="@+id/join1_btn_verify"                app:layout_constraintStart_toStartOf="parent"                app:layout_constraintTop_toTopOf="parent" />            <TextView                android:id="@+id/join1_txt_email_pin_display"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginEnd="14dp"                android:text="\@gnu.ac.kr"                android:textColor="@color/black"                android:textSize="14sp"                app:layout_constraintBottom_toBottomOf="@+id/join1_edit_email"                app:layout_constraintEnd_toEndOf="@+id/join1_edit_email"                app:layout_constraintTop_toTopOf="@+id/join1_edit_email" />            <androidx.appcompat.widget.AppCompatButton                android:id="@+id/join1_btn_verify"                style="?android:attr/borderlessButtonStyle"                android:layout_width="wrap_content"                android:layout_height="0dp"                android:layout_marginVertical="5dp"                android:background="@drawable/background_radius_10dp_solid_gray7"                android:enabled="false"                android:text="인증받기"                android:textColor="@color/white"                android:textSize="14sp"                app:layout_constraintBottom_toBottomOf="parent"                app:layout_constraintEnd_toEndOf="parent"                app:layout_constraintTop_toTopOf="parent" />        </androidx.constraintlayout.widget.ConstraintLayout>        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginTop="38dp"            android:text="인증번호"            android:layout_marginStart="4dp"            android:textColor="@color/black"            android:textSize="14sp" />        <androidx.constraintlayout.widget.ConstraintLayout            android:layout_width="match_parent"            android:layout_height="wrap_content">            <androidx.appcompat.widget.AppCompatEditText                android:id="@+id/join1_edit_certification_number"                android:layout_width="0dp"                android:layout_height="wrap_content"                android:layout_marginEnd="15dp"                android:hint="인증번호 입력"                android:inputType="number"                android:maxLines="1"                android:textColor="@color/black"                android:textColorHint="@color/gray7"                android:textSize="14sp"                android:theme="@style/EditTextTheme"                app:layout_constraintBottom_toBottomOf="parent"                app:layout_constraintEnd_toStartOf="@+id/join1_txt_timer"                app:layout_constraintStart_toStartOf="parent"                app:layout_constraintTop_toTopOf="parent" />            <TextView                android:id="@+id/join1_txt_timer"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginEnd="15dp"                android:text="03:12"                android:textColor="@color/main"                android:textSize="12sp"                android:visibility="gone"                app:layout_constraintBottom_toBottomOf="parent"                app:layout_constraintEnd_toStartOf="@+id/join1_btn_certification_confirmation"                app:layout_constraintTop_toTopOf="parent" />            <androidx.appcompat.widget.AppCompatButton                android:id="@+id/join1_btn_certification_confirmation"                style="?android:attr/borderlessButtonStyle"                android:layout_width="wrap_content"                android:layout_height="0dp"                android:layout_marginVertical="5dp"                android:background="@drawable/background_radius_10dp_solid_gray7"                android:enabled="false"                android:text="확인"                android:textColor="@color/white"                android:textSize="14sp"                app:layout_constraintBottom_toBottomOf="parent"                app:layout_constraintEnd_toEndOf="parent"                app:layout_constraintTop_toTopOf="parent" />        </androidx.constraintlayout.widget.ConstraintLayout>        <TextView            android:id="@+id/join1_txt_verification_certification"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginStart="4dp"            android:textColor="@color/main"            android:textSize="14sp"            android:visibility="invisible" />        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginTop="22dp"            android:text="비밀번호"            android:layout_marginStart="4dp"            android:textColor="@color/black"            android:textSize="14sp" />        <androidx.appcompat.widget.AppCompatEditText            android:id="@+id/join1_edit_password"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:hint="특수문자, 영문자, 숫자 각 1개 이상 포함 8~15자"            android:inputType="textPassword"            android:maxLength="15"            android:maxLines="1"            android:textColor="@color/black"            android:textColorHint="@color/gray7"            android:textSize="14sp"            android:theme="@style/EditTextTheme"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toTopOf="parent" />        <TextView            android:id="@+id/join1_txt_verification_password"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginStart="4dp"            android:textColor="@color/main"            android:textSize="14sp"            android:visibility="invisible" />        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginTop="18dp"            android:text="비밀번호 확인"            android:layout_marginStart="4dp"            android:textColor="@color/black"            android:textSize="14sp" />        <androidx.appcompat.widget.AppCompatEditText            android:id="@+id/join1_edit_password_check"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:hint="비밀번호 확인"            android:inputType="textPassword"            android:maxLength="15"            android:maxLines="1"            android:textColor="@color/black"            android:textColorHint="@color/gray7"            android:textSize="14sp"            android:theme="@style/EditTextTheme"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toTopOf="parent" />        <TextView            android:id="@+id/join1_txt_verification_password_check"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginStart="4dp"            android:textColor="@color/main"            android:textSize="14sp"            android:visibility="invisible" />    </androidx.appcompat.widget.LinearLayoutCompat>    <androidx.appcompat.widget.AppCompatButton        android:id="@+id/join1_btn_next"        style="?android:attr/borderlessButtonStyle"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:layout_marginHorizontal="25dp"        android:layout_marginBottom="30dp"        android:background="@drawable/background_radius_10dp_solid_gray7"        android:enabled="false"        android:paddingVertical="18dp"        android:text="@string/next"        android:textColor="@color/white"        android:textSize="20sp"        android:textStyle="bold"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent" /></androidx.constraintlayout.widget.ConstraintLayout>