<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/memo_post_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="250dp"
    android:layout_marginHorizontal="25dp"
    android:background="@drawable/background_dialog"
    android:elevation="5dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_memo_post_txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginHorizontal="40dp"
        android:text="메모를 남겨주세요:)"
        android:layout_marginVertical="20dp"
        android:fontFamily="@font/pretendard_semi_bold"
        android:textColor="@color/black"
        android:textSize="18sp" />
    
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/dialog_memo_post_edit"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:hint="내용을 입력해 주세요"
        android:textColorHint="@color/black"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:gravity="top"
        android:padding="13dp"
        android:maxLines="5"
        android:maxLength="30"
        android:fontFamily="@font/pretendard_medium"
        android:layout_marginBottom="19dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/gray15"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:paddingBottom="12dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/dialog_memo_post_txt_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/background_radius_10dp_stroke_secondary"
            style="?android:attr/borderlessButtonStyle"
            android:text="취소하기"
            android:paddingVertical="19dp"
            android:textSize="14sp"
            android:textColor="@color/secondary"
            android:layout_marginEnd="12dp"
            android:fontFamily="@font/pretendard_semi_bold"/>

        <TextView
            android:id="@+id/dialog_memo_post_txt_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingVertical="19dp"
            android:textSize="14sp"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/white"
            android:fontFamily="@font/pretendard_semi_bold"
            android:background="@drawable/background_radius_10dp_solid_secondary"
            android:text="등록하기" />
    </LinearLayout>
</LinearLayout>