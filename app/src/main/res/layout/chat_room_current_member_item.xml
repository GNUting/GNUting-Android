<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="16dp"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_room_current_member_item_img_profile"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:contentDescription="사용자 프로필 이미지"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_profile"/>

    <ImageView
        android:id="@+id/chat_room_current_member_item_img_user_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_user_me"/>

    <TextView
        android:id="@+id/chat_room_current_member_item_txt_name"
        android:textColor="#050505"
        android:textSize="12sp"
        android:fontFamily="@font/pretendard_regular"
        android:layout_marginStart="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="이름"/>


</androidx.appcompat.widget.LinearLayoutCompat>