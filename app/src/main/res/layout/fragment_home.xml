<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="24dp"
    tools:context=".ui.fragment.home.HomeFragment">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_logo"
        app:layout_constraintBottom_toBottomOf="@+id/home_img_alarm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/home_img_alarm" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/home_img_profile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="19dp"
        android:src="@drawable/ic_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/home_img_alarm"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_bell"
        app:layout_constraintEnd_toStartOf="@+id/home_img_profile"
        app:layout_constraintTop_toTopOf="@+id/home_img_profile" />

    <TextView
        android:id="@+id/home_txt_greetings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:drawablePadding="5dp"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:drawableEndCompat="@drawable/ic_happy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_img_alarm"
        tools:text="ooo님 안녕하세요!" />

    <androidx.cardview.widget.CardView
        android:id="@+id/home_pager_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_txt_greetings" >
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/home_pager"
            android:layout_width="match_parent"
            android:layout_height="100dp" />
    </androidx.cardview.widget.CardView>


    <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
        android:id="@+id/dots_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:dotsCornerRadius="8dp"
        app:dotsSize="8dp"
        android:layout_marginTop="10dp"
        app:dotsSpacing="8dp"
        app:dotsWidthFactor="0"
        app:dotsColor="#D9D9D9"
        app:selectedDotColor="#A0A0A0"
        app:layout_constraintEnd_toEndOf="@+id/home_pager_container"
        app:layout_constraintStart_toStartOf="@+id/home_pager_container"
        app:layout_constraintTop_toBottomOf="@+id/home_pager_container"
        app:progressMode="true" />

    <TextView
        android:id="@+id/home_txt_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="과팅 게시판"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_pager_container" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="#e9e9e9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_txt_list_title" />

    <TextView
        android:id="@+id/home_txt_more_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="더보기"
        android:drawablePadding="8dp"
        android:textColor="#767676"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/home_txt_list_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/home_txt_list_title"
        app:drawableEndCompat="@drawable/ic_arrow_more" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="14dp"
        android:id="@+id/home_recyclerview"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:listitem="@layout/home_list_item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

</androidx.constraintlayout.widget.ConstraintLayout>