<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/chatListFragment"
        android:name="com.changs.android.gnuting_android.ui.fragment.ChatListFragment"
        android:label="fragment_chat_list"
        tools:layout="@layout/fragment_chat_list" >
        <action
            android:id="@+id/action_chatListFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.changs.android.gnuting_android.ui.fragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_postListFragment"
            app:destination="@id/postListFragment" />
    </fragment>
    <fragment
        android:id="@+id/myFragment"
        android:name="com.changs.android.gnuting_android.ui.fragment.MyFragment"
        android:label="fragment_my"
        tools:layout="@layout/fragment_my" >
        <action
            android:id="@+id/action_myFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
        <action
            android:id="@+id/action_myFragment_to_myPostListFragment"
            app:destination="@id/myPostListFragment" />
    </fragment>
    <fragment
        android:id="@+id/listFragment"
        android:name="com.changs.android.gnuting_android.ui.fragment.ListFragment"
        android:label="fragment_list"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/action_listFragment_to_applicationFragment"
            app:destination="@id/applicationFragment" />
    </fragment>
    <fragment
        android:id="@+id/postListFragment"
        android:name="com.changs.android.gnuting_android.ui.fragment.PostListFragment"
        android:label="fragment_post_list"
        tools:layout="@layout/fragment_post_list" >
        <action
            android:id="@+id/action_postListFragment_to_postFragment"
            app:destination="@id/postFragment" />
        <action
            android:id="@+id/action_postListFragment_to_searchPostListFragment"
            app:destination="@id/searchPostListFragment" />
    </fragment>
    <fragment
        android:id="@+id/postFragment"
        android:name="com.changs.android.gnuting_android.ui.fragment.PostFragment"
        android:label="fragment_post"
        tools:layout="@layout/fragment_post" />
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.changs.android.gnuting_android.ui.fragment.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >
        <action
            android:id="@+id/action_detailFragment_to_editPostFragment"
            app:destination="@id/editPostFragment" />
        <argument
            android:name="id"
            app:argType="integer" />
    </fragment>
    <action android:id="@+id/action_global_detailFragment"
        app:destination="@id/detailFragment"/>
    <fragment
        android:id="@+id/applicationFragment"
        android:name="com.changs.android.gnuting_android.ui.fragment.ApplicationFragment"
        android:label="fragment_application"
        tools:layout="@layout/fragment_application" >
        <argument
            android:name="application_item"
            app:argType="com.changs.android.gnuting_android.data.model.ApplicationResult" />
    </fragment>
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.changs.android.gnuting_android.ui.fragment.EditProfileFragment"
        android:label="fragment_edit_proflie"
        tools:layout="@layout/fragment_edit_proflie" >
        <argument
            android:name="member"
            app:argType="com.changs.android.gnuting_android.data.model.MyInfoResult" />
    </fragment>
    <fragment
        android:id="@+id/myPostListFragment"
        android:name="com.changs.android.gnuting_android.ui.fragment.MyPostListFragment"
        android:label="fragment_my_post_list"
        tools:layout="@layout/fragment_my_post_list" />
    <fragment
        android:id="@+id/reportFragment"
        android:name="com.changs.android.gnuting_android.ui.fragment.ReportFragment"
        android:label="fragment_report"
        tools:layout="@layout/fragment_report" >
        <argument
            android:name="id"
            app:argType="integer" />
    </fragment>
    <action android:id="@+id/action_global_reportFragment" app:destination="@id/reportFragment" />
    <fragment
        android:id="@+id/editPostFragment"
        android:name="com.changs.android.gnuting_android.ui.fragment.EditPostFragment"
        android:label="fragment_edit_post"
        tools:layout="@layout/fragment_edit_post" >
        <argument
            android:name="id"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/searchPostListFragment"
        android:name="com.changs.android.gnuting_android.ui.fragment.SearchPostListFragment"
        android:label="fragment_search_post_list"
        tools:layout="@layout/fragment_search_post_list" />
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.changs.android.gnuting_android.ui.fragment.ChatFragment"
        android:label="fragment_chat"
        tools:layout="@layout/fragment_chat" >
        <argument
            android:name="id"
            app:argType="integer" />
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="info"
            app:argType="string" />
    </fragment>
</navigation>